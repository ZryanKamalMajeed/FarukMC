}


<div class="container">
    <div class="card">
        <h5 class="card-header">Delete ItemTaken</h5>
        <div class="card-body">
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Quantity)
