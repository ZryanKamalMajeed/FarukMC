@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<div id="home" class="view jarallax" data-jarallax='{"speed": 0.2}'>
    <div class="container" >
        @if (Model.Any())
        {
            foreach (var role in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        Role ID : @role.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@role.Name</h5>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Administration" asp-action="EditRole" asp-route-Id="@role.Id" class="btn btn-primary mr-4">Edit</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No Roles created yet.
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a role
                    </h5>
                    <a class="btn btn-info" asp-controller="Administration" asp-action="CreateRole">Create Role</a>
                </div>
            </div>
        }
    </div>
    </div>
